@model itemsproject.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
<div class="container mt-5">
    <h2 class="text-danger mb-4"> Delete Client</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete this client?
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Items</dt>
        <dd class="col-sm-9">
            @if (Model.Items != null && Model.Items.Any())
            {
                <ul>
                    @foreach (var item in Model.Items)
                    {
                        @item.Name 
                        @item.Category?.Name
                    }
                </ul>
            }
            else
            {
                <span>No items assigned</span>
            }
        </dd>
    </dl>

        <div class="form-group pt-3">
            <button type="submit" class="btn btn-primary"> Save </button>
            <a asp-action="index" asp-controller="Client" class="btn btn-secondary"> Cancel </a>
        </div>
 </div>

</form>

