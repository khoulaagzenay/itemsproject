@model itemsproject.Models.Item
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete item</h1>
<form method="post" asp-action="DeleteItem">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" disabled class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" disabled class="form-control" asp-items="@ViewBag.categorylist"> </select>
    </div>

    <br />
    <hr />

    <div class="form-group pt-3">
        <button type="submit" class="btn btn-primary"> Delete </button>
        <a asp-action="index" asp-controller="items" class="btn btn-secondary"> Back to the list</a>
    </div>
</form>
