@model itemsproject.Models.Item
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit item</h1>
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categorylist"> </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <br />
    <hr />

    <div class="form-group pt-3">
        <button type="submit" value="Edit" class="btn btn-primary"> Save </button>
        <a asp-action="index" asp-controller="items" class="btn btn-secondary"> Back to the list</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
